            <li><span class=label>*Name on Academic Record</span>
              <input name="academic_3[academic_record]" maxlength="100" size="25" type="text" value="<%= @academic_3.academic_record if @academic_3!=nil %>"/>
              <%= has_error @academic_3, :academic_record %>
