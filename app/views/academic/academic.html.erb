                    <% end %>
                <% end %>
              </select>
            </li>
        <% end %>

        <li><span class=label>Degrees/Major</span>
          <input name="academic_2[degrees]" maxlength="100" size="25" type="text" value="<%= @academic_2.degrees if @academic_2!=nil %>">
        </li>
        <li><span class=label>Dates Attended(MM/YYYY)</span>
          <input id="academic_2[attend_date_start]" name="academic_2[attend_date_start]"  maxlength="7" size="12" type="text" value="<%= @academic_2.attend_date_start if @academic_2!=nil %>">
          &nbsp;To
          <input id="academic_2[attend_date_end]" name="academic_2[attend_date_end]"  maxlength="7" size="12" type="text" value="<%= @academic_2.attend_date_end if @academic_2!=nil %>">
          <span id="hint_2" class="mark"></span>
        </li>
        <li><span class=label>Completed</span>
          <input name="academic_2[complete]" type="radio" value="1" <%= "checked=\"checked\"" if @academic_2!=nil && @academic_2.complete==1 %> />
        </li>
        <li><span class=label>In Progress</span>
          <input name="academic_2[complete]" type="radio" value="0" <%= "checked=\"checked\"" if @academic_2!=nil && @academic_2.complete==0 %> />
        </li>
        <% if @profile != nil && @profile.user_type ==1 %>
            <li><span class=label>*Name on Academic Record</span>
              <input name="academic_2[academic_record]"  maxlength="100" size="25" type="text" value="<%= @academic_2.academic_record if @academic_2!=nil %>"/>
              <%= has_error @academic_2, :academic_record %>
            </li>
        <% end %>
      </ul>
    </div>
    <a href="javascript:remove('another_1','div2')">Remove College/University/Institution</a><br/>
  </div>


  <div class="contright_cont" id="another_2" style="display:none;<% if @academic_3 !=nil%>display:block;
    <% end %>">
    <input type="hidden" id="div3" name="div3" value="false">
    <hr size="1" color="#A9B5C6"/>
    Please identify the high school/college/universities attended with the most recent first. If you were home schooled
    or are in receipt of a GED, please identify the certificate granting information.
    <div class="userInfo">
      <ul>
        <li><span class=label>* Institution</span>
          <input name="academic_3[institution]" maxlength="100" id="a3I" size="25" type="text" value="<%= @academic_3.institution if @academic_3!=nil %>"><%= has_error @academic_3, :institution %>
        </li>
        <li><span class=label>* City</span>
