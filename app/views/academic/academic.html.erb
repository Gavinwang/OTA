        <% if @profile != nil && @profile.user_type ==0 %>
            <li><span class=label>* Country</span>
              <select name="academic_2[country]" onChange="ToggleAddressFields(this)">
                <% @country.each do |temp| %>
                    <% if @academic_2!=nil && @academic_2.country == temp[:country_code] %>
